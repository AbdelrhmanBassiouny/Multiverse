<launch>

    <arg name="config" default="$(find multiverse_server)/config/multiverse_client.yaml"/>

    <node pkg="multiverse_server" type="multiverse_server" name="multiverse_server" output="screen"
        args="7300 7400 7500" />

    <node pkg="multiverse_server" type="multiverse_service.py" name="multiverse_service"
        output="screen" args="7400" />

    <node pkg="multiverse_server" type="multiverse_client.py" name="multiverse_client"
        output="screen" args="7300">
        <rosparam command="load" file="(arg config)" />
    </node>
</launch>